{
  "name": "@mezo-org/orangekit-contracts",
  "version": "1.0.0-beta.4",
  "license": "GPL-3.0-only",
  "files": [
    "artifacts/",
    "!artifacts/contracts/test",
    "contracts/",
    "!contracts/test",
    "deploy/",
    "deployments/",
    "typechain/",
    "utils/",
    "export/",
    "export.json"
  ],
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "@safe-global/safe-contracts": "1.4.1-build.0"
  },
  "devDependencies": {
    "@keep-network/hardhat-helpers": "^0.7.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@safe-global/protocol-kit": "^3.0.1",
    "@safe-global/safe-core-sdk-types": "^4.0.1",
    "@tenderly/hardhat-tenderly": "^2.2.2",
    "@thesis-co/eslint-config": "^0.6.1",
    "@types/dotenv-safe": "^8.1.6",
    "bech32": "^2.0.0",
    "bs58check": "^3.0.1",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "dotenv-safe": "^9.1.0",
    "eslint": "^8.57.0",
    "ethers": "^6.12.1",
    "hardhat": "^2.22.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.12.2",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.2",
    "solhint-config-thesis": "^0.1.0"
  },
  "scripts": {
    "clean": "hardhat clean && rm -rf artifacts/ cache/ typechain/",
    "build": "hardhat compile",
    "deploy": "hardhat deploy --export-all export.json",
    "node": "hardhat node",
    "format": "npm run lint:ts && npm run lint:sol && npm run lint:config",
    "format:fix": "npm run lint:ts:fix && npm run lint:sol:fix && npm run lint:config:fix",
    "lint:ts": "eslint .",
    "lint:ts:fix": "eslint . --fix",
    "lint:sol": "solhint 'contracts/**/*.sol' && prettier --check 'contracts/**/*.sol'",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix --noPrompt && prettier --write 'contracts/**/*.sol'",
    "lint:config": "prettier --check '**/*.@(json|md)' --ignore-path ../.prettierignore",
    "lint:config:fix": "prettier --write '**/*.@(json|md)' --ignore-path ../.prettierignore",
    "test": "hardhat test"
  }
}